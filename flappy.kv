FloatLayout:
    Background:
        id: background
        canvas.before:
            Rectangle:
                size: self.size
                pos: self.pos
                source: "flappy-jay-background.png"

            Rectangle:
                id: clouds
                size: self.width, 138
                pos: self.pos[0], self.pos[1] + self.height - 138
                texture: self.cloud_texture

            Rectangle:
                id: floor
                size: self.width, 112
                pos: self.pos[0], self.pos[1]
                texture: self.floor_texture        



